---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<section class="card-section">
	<li class="link-card">
		<a href={href}>
			<h2>
				{title}
				<!-- <span>&rarr;</span> -->
			</h2>
			<p>
				{body}
			</p>
		</a>
	</li>

</section>

<style>
   .card-section {
	width: fit-content;
	width: 100% !important;
   }
	.link-card {
		text-align: center;
		list-style: none;
		display: flex;
		justify-content: center;
		align-items: center;
		background-size: 400%;
		background-position: 100%;
		/* transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
		/* width: 100%; */
		height: 300px;
		/* background: black; */
	}

	.link-card > a {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100%;
		text-decoration: none;
		line-height: 1.4;
		color: var(--text-color);
		background-color: rgb(202, 202, 202);
		opacity: 0.8;
	}
